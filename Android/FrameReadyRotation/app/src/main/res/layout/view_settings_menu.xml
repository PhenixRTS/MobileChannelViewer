<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="5dp"
    android:id="@+id/debug_menu"
    app:cardCornerRadius="8dp"
    app:cardBackgroundColor="@color/primaryDarkColor"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <LinearLayout
        android:id="@+id/channel_settings_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <EditText
            android:id="@+id/rotation"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_margin="8dp"
            android:padding="4dp"
            android:hint="@string/hint_rotation"
            android:textSize="14sp"
            android:textColor="@color/primaryDarkColor"
            android:textColorHint="@color/primaryTextDarkColor"
            android:background="@drawable/bg_square_pill_rounded_white"
            android:importantForAutofill="no"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/width"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_margin="8dp"
            android:padding="4dp"
            android:hint="@string/hint_width"
            android:textSize="14sp"
            android:textColor="@color/primaryDarkColor"
            android:textColorHint="@color/primaryTextDarkColor"
            android:background="@drawable/bg_square_pill_rounded_white"
            android:importantForAutofill="no"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/height"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_margin="8dp"
            android:padding="4dp"
            android:hint="@string/hint_height"
            android:textSize="14sp"
            android:textColor="@color/primaryDarkColor"
            android:textColorHint="@color/primaryTextDarkColor"
            android:background="@drawable/bg_square_pill_rounded_white"
            android:importantForAutofill="no"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/apply_changes"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_margin="8dp"
            android:text="@string/apply_changes"
            android:background="@drawable/bg_square_button"
            android:gravity="center"
            android:textColor="@color/primaryTextColor"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
